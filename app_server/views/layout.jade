doctype html
html(ng-app='wscApp')
  head
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title= title
    link(rel='stylesheet', href='/bootstrap/css/bootswatch_superhero.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.fixed-top
      a.navbar-brand(href='/') Wall St. Connect
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarColor01', aria-controls='navbarColor01', aria-expanded='true', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarColor01.navbar-collapse.collapse.show(style='')
        ul.navbar-nav.mr-auto
          li.nav-item.active
            a.nav-link(href='/dashboard')
              | Dashboard
              span.sr-only (current)
          li.nav-item
            a.nav-link(href='/user/login') Login
          li.nav-item
            a.nav-link(href='/user/register') Register
          li.nav-item
            a.nav-link(href='/about') About
        form.form-inline.my-2.my-lg-0
          input.form-control.mr-sm-2(type='text', placeholder='To Be Implemented')
          button.btn.btn-secondary.my-2.my-sm-0(type='submit') Search

    .container
      block content

      footer
        .row
          .col-xs-12
            small &copy; Wall Street Connect 2018
    script(src='/angular/angular.min.js')
    script(src='/angular/wscApp.js')
    script(src='/javascripts/jquery-3.3.1.min.js')
    script(src='/bootstrap/js/bootstrap.min.js')