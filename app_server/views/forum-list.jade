extends layout

include _includes/sharedHTMLfunctions

block content
    .row
        .col-md-10
            .col-md-3
            h2 The Forum
            
            .col-md-6s
                .row.page-header
                    .col-lg-12
                        a.btn.btn-primary.btn-md(href="/ideas/new") Post New Idea
                        &nbsp;
                        a.btn.btn-secondary.btn-md(href="/dashboard") Your Dashboard
                .row
                    .col-xs-12.col-md-12(ng-controller="ideaListCtrl")
                        label(for="filter") Search By Ticker: 
                        input#filter(type="text", ticker="filter", ng-model="textFilter")
                        .error {{ message }}
                        .row.list-group
                                .col-xs-12.list-group-item(ng-repeat="idea in data.ideas | filter: textFilter")
                                    h4 {{ idea.title }}
                                    p Ticker: {{ idea.ticker }}
                                    span 
                                        +outputSentiment{{ idea.sentiment }}
                                    p {{ idea.text }}
                                    small Posted By: {{ idea.postedBy }}
                                    br
                                    small.reviewTimestamp
                                        +formatDate {{ idea.postedAt }}
                                        br
                                    small 
                                        img.Upvotes(src="/images/thumbsUp.png" width="18" height="18" alt="Image size dimensions")
                                        &nbsp; 
                                        small {{ idea.upvoteCount }}
                                        br
                                        img.Downvotes(src="/images/thumbsDown.png" width="18" height="18" alt="Image size dimensions")
                                        &nbsp; 
                                        small {{ idea.downvoteCount }}
                                        br
                                        img.Comments(src="/images/commentIcon.png" width="20" height="20" alt="Image size dimensions")
                                        hr
                        